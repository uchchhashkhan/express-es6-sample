{
  "name": "express-es6-sample",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "Jonathan Cunanan",
    "url": "https://github.com/jcunanan05"
  },
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4"
  },
  "devDependencies": {
    "jest": "^25.1.0"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": ["server/*", "public/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "babel": { "presets": ["@babel/preset-env"] },
  "jest": { "testEnvironment": "node" },
  "scripts": {
    "build": "rm -rf dist-server && babel ./server --out-dir dist-server",
    "start:local": "node server/index.js",              
    "start:prod": "node dist-server/bin/www",           
    "postinstall": "npm run build",                     
    "start:eb": "npm run start:prod",                  
    "test": "jest --ci || true"
  }
}
